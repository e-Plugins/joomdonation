<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.0" type="plugin" group="payment">
	<name>os_targetpay</name>
	<title>Targetpay</title>	
	<author>iDEALplugins.nl</author>
	<creationDate>08-06-2017</creationDate>
	<copyright>Copyright 2017 Idealplugins.nl</copyright>
	<authorEmail>support@idealplugins.nl</authorEmail>
	<authorUrl>http://www.idealplugins.nl</authorUrl>
	<version>1.0</version>
	<description>Targetpay Payment Plugin For Joom Donation Extension</description>	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="tp_rtlo" type="text" size="40" label="RTLO" description="Enter your Targetpay RTLO" default="93929"></field> <!-- // Default TargetPay -->
				<field name="tp_enable_ide" type="list" label="Enable iDEAL" description="Enable iDEAL in your webshop" default="1">
				    <option value="0">No</option>
				    <option value="1">Yes</option>
				</field>
				<field name="tp_enable_mrc" type="list" label="Enable Ban contact" description="Enable Ban contact in your webshop" default="1">
				    <option value="0">No</option>
				    <option value="1">Yes</option>
				</field>
				<field name="tp_enable_deb" type="list" label="Enable Sofort Banking" description="Enable Sofort Banking in your webshop" default="1">
				    <option value="0">No</option>
				    <option value="1">Yes</option>
				</field>
				<field name="tp_enable_wal" type="list" label="Enable Paysafe Card" description="Enable Paysafe Card in your webshop" default="1">
				    <option value="0">No</option>
				    <option value="1">Yes</option>
				</field>
				<field name="tp_enable_cc" type="list" label="Enable Credit Card" description="Enable Credit Card in your webshop" default="0">
				    <option value="0">No</option>
				    <option value="1">Yes</option>
				</field>
				
				<field name="tp_enable_bw" type="list" label="Enable Bankwire" description="Enable Bankwire in your webshop" default="1">
				    <option value="0">No</option>
				    <option value="1">Yes</option>
				</field>
				<field name="tp_enable_afp" type="list" label="Enable Afterpay" description="Enable Afterpay in your webshop" default="1">
				    <option value="0">No</option>
				    <option value="1">Yes</option>
				</field>
				<field name="tp_enable_pyp" type="list" label="Enable Paypal" description="Enable Paypal in your webshop" default="1">
				    <option value="0">No</option>
				    <option value="1">Yes</option>
				</field>
					</fieldset>
				</fields>
	</config>
</extension>
