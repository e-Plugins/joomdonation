<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.0" type="file" method="upgrade">
	<name>os_targetpay</name>
	<title>Targetpay</title>	
	<author>iDEALplugins.nl</author>
	<creationDate>08-06-2017</creationDate>
	<copyright>Copyright 2017 Idealplugins.nl</copyright>
	<authorEmail>support@idealplugins.nl</authorEmail>
	<authorUrl>http://www.idealplugins.nl</authorUrl>
	<version>1.0</version>
	<description>Targetpay Payment Plugin For Joom Donation Extension</description>
	<scriptfile>install.targetpay.php</scriptfile>
	<!-- Fileset definition -->
	<fileset>
		<!-- front-end -->
		<files folder="payment" target="components/com_jdonation/payments">
			<filename>os_targetpay.php</filename>
			<filename>os_targetpay.xml</filename>
			<filename>targetpay.class.php</filename>
		</files>
		<files target="components/com_jdonation/view">
            <folder>targetpay</folder>
        </files>
	</fileset>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.com_jdonation_payment_targetpay.ini</language>
        <language tag="nl-NL">nl-NL/nl-NL.com_jdonation_payment_targetpay.ini</language>
    </languages>
</extension>
